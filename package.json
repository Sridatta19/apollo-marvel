{
  "name": "apollo-marvel",
  "version": "0.1.0",
  "description": "An Apollo-Server based graphql backend for Marvel API",
  "main": "index.js",
  "repository": "git@github.com:Sridatta19/apollo-marvel.git",
  "author": "Sridatta P",
  "license": "MIT",
  "scripts": {
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:node": "nodemon dist/index.js",
    "tslint": "tslint --config tslint.json --project .",
    "build": "tsc --project tsconfig.json",
    "watch:ts": "tsc --project tsconfig.json --watch",
    "prettier": "prettier --config ./.prettierrc --write src/**/*.ts"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.0",
    "@types/graphql": "14.0.3",
    "@types/md5": "2.1.33",
    "@types/node": "10.12.10",
    "concurrently": "4.1.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "nodemon": "1.18.6",
    "prettier": "1.15.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "node_modules"
    ]
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.2.0",
    "apollo-server": "^2.2.2",
    "axios": "^0.18.0",
    "dotenv": "^6.1.0",
    "graphql": "^14.0.2",
    "md5": "^2.2.1"
  }
}
