{
  "name": "apollo-marvel",
  "version": "0.1.0",
  "description": "An Apollo-Server based graphql backend for Marvel API",
  "main": "index.js",
  "repository": "git@github.com:Sridatta19/apollo-marvel.git",
  "author": "Sridatta P",
  "license": "MIT",
  "scripts": {
    "tslint": "tslint --config tslint.json --project .",
    "prettier": "prettier --config ./.prettierrc --write src/**/*.ts"
  },
  "devDependencies": {
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "node_modules"
    ]
  }
}
