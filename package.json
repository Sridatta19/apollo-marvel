{
  "name": "apollo-marvel",
  "version": "0.1.0",
  "description": "An Apollo-Server based graphql backend for Marvel API",
  "main": "index.js",
  "repository": "git@github.com:Sridatta19/apollo-marvel.git",
  "author": "Sridatta P",
  "license": "MIT",
  "scripts": {
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:node": "nodemon dist/index.js",
    "lint": "eslint \"./src/**/*.ts\"",
    "build": "tsc --project tsconfig.json",
    "watch:ts": "tsc --project tsconfig.json --watch",
    "prettier": "prettier --config ./.prettierrc --write src/**/*.ts",
    "test:cucumber": "node_modules/.bin/cucumber-js --tags '(not @todo)' --require-module ts-node/register --require spec/cucumber/steps/**/*.ts spec/cucumber/features"
  },
  "dependencies": {
    "apollo-datasource": "^0.2.1",
    "apollo-datasource-rest": "^0.2.0",
    "apollo-server": "^2.14.2",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "dotenv": "^6.1.0",
    "elasticsearch": "^15.2.0",
    "graphql": "^14.0.2",
    "md5": "^2.2.1",
    "nodemailer": "^4.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cucumber": "^4.0.4",
    "@types/dotenv": "6.1.0",
    "@types/elasticsearch": "^5.0.30",
    "@types/express": "4.16.0",
    "@types/graphql": "14.0.3",
    "@types/md5": "2.1.33",
    "@types/node": "10.12.10",
    "@types/nodemailer": "^4.6.5",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "concurrently": "4.1.0",
    "cucumber": "^5.0.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "ndb": "^1.0.36",
    "nodemon": "1.18.6",
    "prettier": "1.15.2",
    "ts-node": "^7.0.1",
    "typescript": "3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "node_modules"
    ]
  }
}
